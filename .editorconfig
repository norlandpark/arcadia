root = true

[*]
end_of_line = lf
insert_final_newline = true

[{*.js, *.scss, *.html, *.pug}]
indent_style = space
charset = utf-8
indent_size = 2
max_line_length = 120

[{*.yml, *.yaml}]
indent_style = space
charset = utf-8
indent_size = 2

[*.svg]
indent_style = space
charset = utf-8
indent_size = 2

[package.json]
indent_style = space
charset = utf-8
indent_size = 2
