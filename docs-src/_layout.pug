    block stylesheets
  body
    header.pl-navbar-container.sticky
      nav.pl-navbar
        ul.nav-items
          li.pl-only-light
            a.nav-item.logo.light(href="./index.html")
              include static/logo.svg
            a.nav-item.logo.dark(href="./index.html")
              include static/logo-light.svg
          li.spacer
          li: a.nav-item.github(href="https://github.com/norlandpark/parkland", target="_github", title="View source on GitHub")
            span.pl-only-light: include static/github.svg
            span.pl-only-dark: include static/github-light.svg
          li: button.nav-item.theme#toggle-dark-mode(title="Toggle light and dark mode")
            span.pl-only-light: include static/moon.svg
            span.pl-only-dark: include static/sun.svg

